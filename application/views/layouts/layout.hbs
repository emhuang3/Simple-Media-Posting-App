<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel="icon" href="/public/favicon.ico" sizes="70x70" type="image/ico">
    <link rel='stylesheet' href='/public/css/style.css' />
    <script defer src = "/public/js/frontendjs.js"></script>
    
    
  </head>
  
  <body>
    {{log this}}
    {{> banner}}
    {{> nav}}
    {{#if (emptyObject messages)}}
    {{> flash-message}}
    {{/if}}
    
    {{{body}}}
    {{> footer}}

    {{#if logged}}
      <script>
        let ele = document.getElementById('login-button');
        if (ele){
          ele.onclick = (even) =>{
            fetch('/users/logout', {
              method: "POST"
            })
            .then((data)=>{
              location.replace('/');
            })
          }
        }
      </script>
    {{/if}}
  </body>
</html>
